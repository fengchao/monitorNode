extends layout

block content
	.container.col-ms-6.col-ms-offset-3
		if (message)
			p message
		form.form-signin(role='form', method="post", action="/login")
			h2.form-signin-heading Login
			input.form-control(type="text", name="email", placeholder='Email Address')
			input.form-control(type="password", name="password", placeholder='password')
			button.btn.btn-lg.btn-primary.btn-block(type="submit") Log In
