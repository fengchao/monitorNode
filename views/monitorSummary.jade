extends layout

block content
	.container-fluid
		.row
			.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li.active
						a(href='#') Overview
					li
						a(href='#') Reports
				ul.nav.nav-sidebar
					li
						a(href='') One more nav
			.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				//
					h1.page-header Dashboard
						.row.placeholders
							.col-xs-6.col-sm-3.placeholder
								img.img-responsive(data-src='holder.js/200x200/auto/sky', alt='Generic placeholder thumbnail')
								h4 Label
				h2.sub-header Summary
					.table-responsive
						table.table.table-striped
							thead
								tr
									th Date
									th Total
									th Success
									th Fail
							tbody
								tr
									td= summary.date
									td= summary.totalRec
									td= summary.successRec
									td= summary.failRec
				h2.sub-header Error
					.table-responsive
						table.table.table-striped
							thead
								tr
									th Error
									th Count
							tbody
								- each item in errorSummary
									tr
										td= item._id
										td= item.count
		
